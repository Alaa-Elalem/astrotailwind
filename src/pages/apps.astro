---
import type { Frontmatter } from "../config";
import { SiteMetadata } from "../config";
import Base from "../layouts/base.astro";
import PageHero from "../components/pagehero.astro";
import coverSVG from "../assets/svg/darahem/darahem.jpg";
// import socialImage from "../assets/undraw/undraw_page_not_found.png";

const frontmatter: Frontmatter = {
  title: " تحميل تطبيق دراهم",
  description: " ميزات تطلبق دراهم",
  coverSVG: coverSVG,
  // socialImage: socialImage,
  publishDate: SiteMetadata.buildTime,
};

const jobs = [
  {
    name: "حمل تطبيق دراهم على اجهزة اندرويد",
    logolink: "/assets/google-play-badge-en.svg",
    icon: "logos:facebook",
    link: "https://libyashoes.ly/",
  },
  {
    name: "حمل تطبيق دراهم على اجهزة اي فون",
    logolink: "/assets/app-store-badge-en.svg",
    icon: "cib:tiktok",
    link: "https://libyashoes.ly/",
  },

  {
    name: "حمل تطبيق دراهم على اجهزة ويندوز ",
    logolink: "/assets/app-desktop.svg",
    icon: "darahem",
    link: "https://play.google.com/store/apps/details?id=com.darahem.kart&hl=ar&gl=US",
  },
];
---

<Base frontmatter={frontmatter}>
  <header>
    <PageHero
      title={frontmatter.title}
      description={frontmatter.description}
      coverSVG={frontmatter.coverSVG}
      socialImage={frontmatter.socialImage}
    />
  </header>
  <div
    class="text-center bg-slate-100 mt-2 py-6 text-3xl leading-8 font-extrabold dark:bg-gray-800"
  >
    <h2>تطبيق دراهم</h2>
    <p
      class="mt-2 py-6 text-3xl leading-8 font-extrabold max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 tracking-tight text-gray-900 dark:text-secondary sm:text-4xl"
    >
      ابقى على تواصل بسعر سلة العملات والمعادن الثمينة بسعر حقيقي ومتجدد وبدون
      اعلانات
    </p>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="shrink-0">
        <dl
          class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10 p-4"
        >
          {
            jobs.map((job) => (
              <div>
                <div class=" bg-white rounded-xl shadow-lg m-2 p-2">
                  <div>
                    <a
                      href={job.link}
                      class="ml-3 text-secondary  py-4  bg-white rounded-xl shadow-lg hover:text-blue-600 dark:text-secondary dark:hover:text-blue-300"
                      rel="noopener noreferrer"
                      target="_blank"
                    >
                      <p class=" m-auto  text-lg leading-6  font-bold text-gray-900  dark:text-secondary dark:opacity-100">
                        {job.name}
                      </p>
                      <div class=" mx-auto flex  w-36  mt-3  items-center   border-[#2a2e39]  border-2 rounded-lg justify-center">
                        <img
                          class="mx-auto  w-32  p-1 flex items-center justify-center text-white"
                          src={job.logolink}
                        />
                      </div>
                      <dd class="  hidden  items-center justify-center  mr-4 mt-2 text-base text-gray-600 dark:text-gray-400">
                        {job.logolink}
                      </dd>
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
</Base>
