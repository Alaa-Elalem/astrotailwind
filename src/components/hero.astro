<style is:global>
  #Layer_1 {
    fill: navy;
    stroke: gold;
    stroke-width: 2px;
    stroke-dasharray: 120;
    animation: draw 3s forwards infinite;
  }
  @keyframes draw {
    from {
      stroke-dashoffset: -120;
      /* stroke: navy; */
      stroke: #f0c986;
      fill: #f0c986;
    }

    to {
      stroke-dashoffset: 0;
      /* stroke: #f0c986; */
      stroke: #0f3548;
      fill: #0f3548;
    }
  }

  .dark svg text {
    stroke: gold;
  }
  svg text {
    /* text-transform: uppercase; */
    animation: stroke 4s infinite alternate;
    stroke-width: 2;
    stroke: #0f3548;
    animation-delay: 1s;
    font-size: 140px;
  }
  @keyframes stroke {
    0% {
      fill: #0f3548;
      stroke: #0f3548;
      stroke-dashoffset: 25%;
      stroke-dasharray: 0 50%;
      stroke-width: 2;
    }

    70% {
      fill: rgba(72, 138, 20, 0);
      stroke: rgba(54, 95, 160, 1);
    }
    80% {
      fill: rgba(72, 138, 20, 0);
      stroke: rgba(54, 95, 160, 1);
      stroke-width: 3;
    }
    100% {
      fill: #0f3548;
      stroke: #0f3548;
      stroke-dashoffset: -25%;
      stroke-dasharray: 50% 0;
      stroke-width: 0;
    }
  }

  /* .cls-1 {
    fill: white;
    fill-opacity: 0;
    stroke: white;
    stroke-width: 5;
    stroke-linecap: round;

    stroke-dasharray: 860;
    stroke-dashoffset: 860;
    animation: draw 2s linear forwards;
  } */

  @keyframes draw {
    to {
      stroke-dashoffset: 0;
    }
  }

  #texts {
    overflow: hidden;
    background: hsla(0, 5%, 5%, 1);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-image: linear-gradient(
      to right top,
      hsla(0, 5%, 15%, 0.5),
      hsla(0, 5%, 5%, 1)
    );
  }
  svg {
    width: 100%;
  }
</style>
