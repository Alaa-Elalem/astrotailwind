      stroke: rgba(54, 95, 160, 1);
      stroke-width: 3;
    }
    100% {
      fill: #0f3548;
      stroke: #0f3548;
      stroke-dashoffset: -25%;
      stroke-dasharray: 50% 0;
      stroke-width: 2;
      filter: hue-rotate(360deg);
    }
  }

